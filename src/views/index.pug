	//hotel
	section#cc-cartagena.container-fluid.container-cartagena
		article.row
			//Nombre hotel
			div.col-left
				h2.text-title.
					ESTELAR Cartagena de Indias Hotel &amp; Centro de Convenciones
			///-Nombre hotel

			//Promos Hotel
			div.col-right

				div.slider
					-for(i=0;i < 8; i++)
						//Promo
						div.item
							div.item-container
								figure.item-img
									//- +image('promos/pareja.jpg', 'Plan Pareja')
