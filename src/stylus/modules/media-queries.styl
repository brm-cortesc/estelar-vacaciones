@media (min-width:480px)
	header
		.text
			&-dcto
				margin-top 4rem
				.mini
					font-size 1.8rem
			&-intro
				font-size 2.2rem
			&-title
				font-size 3.1rem
	.promo
		&-condicion
			font-size 1.5rem
		&-desc
			font-size 3rem
			


@media (min-width:640px)
	.promo
		&-condicion
			font-size 2rem
		&-desc
			font-size 4rem
			

@media (min-width:$screen-sm)
	footer
		text-align center
		
		.btn
			display inline-block
			
	header
		path('bg/bg-header-desktop.jpg')

		.logo
			max-width 100%
			
		.text
			&-dcto
				margin-top 4rem
				.mini
					font-size 1.8rem
			&-intro
				font-size 2.2rem
			&-title
				font-size 3.1rem
				margin-top 35%
				padding 0.5rem

	.item
		margin-bottom 1rem
		margin-top @margin-bottom
		
		&-img,
		&-text
			float none
			width 100%
			

	.promo
		&-condicion
			font-size 1.1rem
		&-desc
			font-size 2rem
			
@media (min-width:$screen-lg)

	.item
		&-text
			margin 0 auto
			max-width 72%
	
	.text
		&-title
			font-size 3.4rem
