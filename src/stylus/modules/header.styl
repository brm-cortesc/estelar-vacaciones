header
	background-attachment fixed
	background-position 50% 50%
	background-repeat no-repeat
	background-size cover
	color white
	height 100vh
	margin 0
	margin 0 auto
	padding 0 0.5rem 40rem
	path('bg/bg-header-mobile.jpg')
	position initial

	.logo
		margin 0
		max-width 22rem

		svg
			cuadrado(100%)
			display block
			margin 0
			
	.scroll
		bottom 2rem
		color white
		cursor pointer
		left 50%
		position absolute
		text-align center
		text-decoration none
		text-shadow 0px 0px 5px rgba(0,0,0,0.5)
		transform translateX(-50%)
		transitionBase()
		
		
		.icon
			cuadrado(5rem)
			display block
			margin 0 auto

			svg
				cuadrado(100%)


	.text
		&-center
			margin 0
			
		&-dcto
			margin-top 2rem
			text-align center
			text-transform uppercase
			
			.mini,
			.valor
				display inline-block
				vertical-align top
			
			.mini
				margin 0
				max-width 22%
				text-align right

			.valor
				font-size 5rem
				font-weight $bold
				line-height 1.1
				margin 0
				
				
				small
					display block
					font-size 26%
					margin-top 1rem

				span
					display block
					line-height 0.8

		&-intro
			border-bottom 1px solid white
			border-top @border-bottom
			padding 0.5rem 2rem
			
		&-title
			background-color transparent
			font-size 2rem
			font-weight $light
			text-transform uppercase
			line-height 1.1
			margin-top 5rem
			padding 1rem
			
			&::before
				content none
				
			strong
				display block
			
